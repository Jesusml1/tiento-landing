---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";
import Roadmap from "@components/RoadmapSection.astro";
import Join from "@components/JoinSection.astro";
import Partners from "@components/PartnersSection.astro";
import Team from "@components/TeamSection.astro";
import MissionVision from "@components/MissionVisionSection.astro";
import About from "@components/AboutSection.astro";
import Hero from "@components/HeroSection.astro";
---

<Layout title="Tiento">
	<Navbar />
	<main class="flex flex-col justify-center items-center overflow-hidden">
		<Hero />
		<About />
		<MissionVision />
		<Roadmap />
		<Team />
		<Partners />
		<Join />
	</main>
	<Footer />
</Layout>

<script src="../../scripts/animations.ts"></script>

<style>
	.head-title {
		font-family: "Fugaz One";
	}
</style>

