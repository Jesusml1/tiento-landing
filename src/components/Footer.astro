---
import { Image } from "astro:assets";
import tientoLogo from "@images/tiento-logo.svg";

import discordLogo from "@images/discord-logo.svg";
import twitterLogo from "@images/twitter-logo.svg";
import instagramLogo from "@images/instagram-logo.svg";

import { getLangFromUrl, useTranslations } from "src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
    class="mx-auto w-full py-10 px-4 max-w-screen-xl flex flex-col justify-center items-center"
>
    <div class="flex flex-col md:flex-row justify-between w-full mb-20">
        <div class="flex flex-col justify-start items-start mb-12 md:mb-0">
            <div class="flex justify-center items-center mb-5">
                <Image src={tientoLogo} height={75} width={75} alt="logo" />
                <div class="head-title">TIENTO</div>
            </div>
            <div class="max-w-48">
                <p>{t('footer.motto')}</p>
            </div>
        </div>
        <div class="flex gap-x-10">
            <div>
                <ul class="flex flex-col gap-y-1">
                    <li class="mb-5 font-bold">{t('footer.company')}</li>
                    <li><a href="#about">{t('footer.company.about')}</a></li>
                    <li><a href="/carrers">{t('footer.company.carrers')}</a></li>
                    <li>
                        <a href="/terms-of-service">{t('footer.company.termsOfService')}</a>
                    </li>
                    <li><a href="/privacy-policy">{t('footer.company.privacyPolicy')}</a></li>
                </ul>
            </div>
            <div>
                <ul class="flex flex-col gap-y-1">
                    <li class="mb-5 font-bold">{t('footer.resources')}</li>
                    <li><a href="/blog">{t('footer.resources.blog')}</a></li>
                    <li><a href="/contact">{t('footer.resources.contact')}</a></li>
                    <li><a href="/community">{t('footer.resources.community')}</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="border-b-2 border-white w-full mb-5"></div>
    <div class="flex flex-col-reverse gap-y-8 md:gap-y-0 md:flex-row justify-between items-end md:items-center w-full">
        <div>{}</div>
        <div class="flex gap-x-5">
            <div class="social-icon">
                <Image src={discordLogo} alt="discord-icon" />
            </div>
            <div class="social-icon">
                <Image src={twitterLogo} alt="twitter-icon" />
            </div>
            <div class="social-icon">
                <Image src={instagramLogo} alt="instagram-icon" />
            </div>
        </div>
    </div>
</footer>

<style>
    .head-title {
        font-family: "Fugaz One";
    }

    .social-icon {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 8px;
        border: 0.5px solid white;
        border-radius: 100%;
        background: rgba(200, 200, 200, 0.2);
    }
</style>
