---
import { Image } from "astro:assets";
import roadmap1 from "@images/roadmap-1.svg";
import roadmap2 from "@images/roadmap-2.svg";
import roadmap3 from "@images/roadmap-3.svg";
import roadmap4 from "@images/roadmap-4.svg";
import roadmap5 from "@images/roadmap-5.svg";
import roadmap6 from "@images/roadmap-6.svg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="roadmap" class="roadmap-section mb-10 p-5 m-4 max-w-screen-2xl">
    <div
        class="w-full p-4 md:p-20 flex flex-col justify-center items-center gap-y-10 bg-[#1f1f1f5d]"
    >
        <div class="mb-10 border-2 border-white border-solid w-fit px-20 py-5">
            {t("roadmap.title")}
        </div>
        <div
            class="text-black grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-16"
        >
            <div
                class="roadmap-1 bg-white p-10 md:py-32 max-w-sm flex flex-col h-full justify-center items-center"
            >
                <h3 class="mb-2 text-lg">
                    {t("roadmap.phase1")}
                </h3>
                <h2 class="md:mb-14 mb-10 text-2xl text-center">
                    {t("roadmap.phase1.name")}
                </h2>
                <Image src={roadmap1} alt="roadmap-1" loading="eager" />
            </div>
            <div
                class="roadmap-2 bg-white p-10 md:py-32 max-w-sm flex flex-col h-full justify-center items-center"
            >
                <h3 class="mb-2 text-lg">
                    {t("roadmap.phase2")}
                </h3>
                <h2 class="md:mb-14 mb-10 text-2xl text-center">
                    {t("roadmap.phase2.name")}
                </h2>
                <Image src={roadmap2} alt="roadmap-2" loading="eager" />
            </div>
            <div
                class="roadmap-3 bg-white p-10 md:py-32 max-w-sm flex flex-col h-full justify-center items-center"
            >
                <h3 class="mb-2 text-lg">
                    {t("roadmap.phase3")}
                </h3>
                <h2 class="md:mb-14 mb-10 text-2xl text-center">
                    {t("roadmap.phase3.name")}
                </h2>
                <Image src={roadmap3} alt="roadmap-3" loading="eager" />
            </div>
            <div
                class="roadmap-4 bg-white p-10 md:py-32 max-w-sm flex flex-col h-full justify-center items-center"
            >
                <h3 class="mb-2 text-lg">
                    {t("roadmap.phase4")}
                </h3>
                <h2 class="md:mb-14 mb-10 text-2xl text-center">
                    {t("roadmap.phase4.name")}
                </h2>
                <Image src={roadmap4} alt="roadmap-4" loading="eager" />
            </div>
            <div
                class="roadmap-5 bg-white p-10 md:py-32 max-w-sm flex flex-col h-full justify-center items-center"
            >
                <h3 class="mb-2 text-lg">
                    {t("roadmap.phase5")}
                </h3>
                <h2 class="md:mb-14 mb-10 text-2xl text-center">
                    {t("roadmap.phase5.name")}
                </h2>
                <Image src={roadmap5} alt="roadmap-5" loading="eager" />
            </div>
            <div
                class="roadmap-6 bg-white p-10 md:py-32 max-w-sm flex flex-col h-full justify-center items-center"
            >
                <h3 class="mb-2 text-lg">
                    {t("roadmap.phase6")}
                </h3>
                <h2 class="md:mb-14 mb-10 text-2xl text-center">
                    {t("roadmap.phase6.name")}
                </h2>
                <Image src={roadmap6} alt="roadmap-6" loading="eager" />
            </div>
        </div>
    </div>
</section>
